{
	"compilerOptions": {
		"jsx": "react-jsx",
		"target": "ES6",
		"allowJs": true,
		"module": "commonjs",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"baseUrl": "./src",
		"paths": {
			"@presentation/*": ["presentation/*"],
			"@infrastructure/*": ["infrastructure/*"],
			"@application/*": ["application/*"],
			"@domain/*": ["domain/*"]
		}
	},
	"include": ["src/**/*"]
}
